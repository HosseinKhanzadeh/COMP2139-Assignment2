@model IEnumerable<InventoryManagement.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h2>Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Guest Name</th>
            <th>Email</th>
            <th>Total Price</th>
            <th>Order Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.GuestName</td>
                <td>@order.GuestEmail</td>
                <td>@order.TotalPrice.ToString("C")</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.OrderId">View</a> |
                    <a asp-action="Delete" asp-route-id="@order.OrderId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Order</a>
